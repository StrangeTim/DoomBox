<div class="row">
  <div class="col-lg-12" id="product">
    <h1 class="headline"><%= @product.name %></h1>


        <div class="col-lg-6">
          <div class="responsive center-block"> </div>
          <h3><%= image_tag @product.image.url(:medium) %></h3>
          <h3><%= @product.month %></h3>
          <h3>Box Contains:</h3>
            <ul>
              <% @product.contents.each do |key, value| %>
              <%= key %><%= value %> <br>
              <% end %>
            </ul>
          <h3><%= @product.description %></h3>
          </div>
        </div>

  </div>

  <% if current_admin %>
    <button class="btn btn-primary"><%= link_to "Edit", edit_product_path(@product) %></button>

    <button class="btn btn-primary"><%= link_to "Delete", product_path(@product),
                                                method: :delete,
                                                data: {confirm: "Are you sure?"} %></button>

  <% end %>
</div>

<div class="row">
  <h1 class="headline"><%= @product.name %></h1>
  <hr>

  <div class="col-lg-6" id="product-left">
    <div class="show-img img-responsive"><%= image_tag @product.image.url(:medium) %></div>
  </div>

<div class="col-lg-6" id="product-right">
  <div class="well">
    <h3 class="month">-<%= @product.month %>-</h3>
    <h3 class="content-headline"><small>This</small> DoomBox <small>contains:</small></h3>
      <ul class="content-list">
        <% @product.contents.each do |key, value| %>
        <li><%= key %><%= value %></li>
        <% end %>
      </ul>

    <h3 class="description"><%= @product.description %></h3>

    <div class="text-center">
      <button class="btn btn-danger"> <%= link_to "Sign Up Now!", new_subscriber_path %></button>
      <p class="call-to-action">Get this box by joining the monthly club! Don't die like your neighbors!</p>
    </div>
        <% if current_admin %>
        <hr>
          <button class="btn btn-primary"><%= link_to "Edit", edit_product_path(@product) %></button>
          <button class="btn btn-primary"><%= link_to "Delete", product_path(@product),
                                                      method: :delete,
                                                      data: {confirm: "Are you sure?"} %></button>
       <% end %>
    </div>
   </div>
</div>
